<% content_for :title do %>Licences - Performance Platform - GOV.UK<% end %>
<% content_for :js_config do %>
    data-controller="licensing/controllers/licences"
<% end %>


<header>
  <p class="category-title"><%= link_to "Licensing performance", :action => "index" %></p>
  <h1>Licences <span class="tagline">(licences on GOV.UK only)</span></h1>
</header>

<div id="filter-wrapper" class="licences"></div>

<section id="licences-list" class="entity-type">
  <header>
    <h2>Applications, Licences, Notices and Registrations</h2>
    <p class="count"><%= @num_licences %></p>
  </header>

  <dl>
    <% @licences.each do |letter, group| %>
    <dt><%= letter.upcase %></dt>
    <dd>
      <ol>
        <% group.each do |licence| %>
        <li><%= link_to licence.name, licence_path(licence.slug) %></li>
        <% end %>
      </ol>
    </dd>
    <% end %>
  </dl>
</section>
