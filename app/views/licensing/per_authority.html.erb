<% content_for :title do %><%= @authority.name %> - Performance Platform - GOV.UK <% end %>
<% content_for :js_config do %>
    data-controller="licensing/controllers/per_authority" data-authority-url-slug="<%= @authority.slug %>"
<% end %>

<header>
  <p class="category-title">Licensing Authorities</p>  
  <h1><%= @authority.name %> <span class="tagline">(GOV.UK applications)</span></h1>
</header>

<section class="graph">
  <h2>Weekly licence applications</h2>
  <h3>Total licence applications over the last 12 weeks and top 5 licences by application volume in this time</h3>

  <figure class="applications-graph" id="applications-by-licence"></figure>
</section>

<section>
  <h2>Licence applications by licence</h2>
  <h3>Licences offered by <%= @authority.name %> on GOV.UK</h3>
  
  <article class="table-wrapper" id="applications-table"></article>
</section>

