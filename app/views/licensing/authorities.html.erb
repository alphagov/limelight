<% content_for :title do %>Authorities - Licensing performance - GOV.UK<% end %>
<% @js_config = { "controller" => "licensing/controllers/authorities" } %>

<header>
  <h1>
      <span class="strapline">Licensing performance</span>
      All authorities offering licences on GOV.UK
      <span class="tagline">(authorities on GOV.UK only)</span>
  </h1>
  <p class="explanatory">You can also see
    <%= link_to({action: 'licences'} ) do %>all licenses<% end %>
    offered on GOV.UK.</p>
</header>

<div id="filter-wrapper"></div>

<section id="authorities-list" class="entity-type">
  <header>
    <h2>National and local authorities</h2>
    <p class="count"><%= @num_authorities %></p>
  </header>

  <dl>
    <% @authorities.each do |letter, group| %>
    <dt><%= letter.upcase %></dt>
    <dd>
      <ol>
        <% group.each do |authority| %>
        <li><%= link_to authority.name, authority_path(authority.slug) %></li>
        <% end %>
      </ol>
    </dd>
    <% end %>
  </dl>
</section>
