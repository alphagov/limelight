<% content_for :title do %>Authorities - Performance Platform - GOV.UK<% end %>
<% content_for :js_config do %>
    data-controller="licensing/controllers/authorities"
<% end %>

<header>
  <p class="category-title"><%= link_to "Licensing performance", :action => "index" %></p>
  <h1>Licensing authorities <span class="tagline">(authorities on GOV.UK only)</span></h1>
</header>

<h2>Licensing authorities on GOV.UK</h2>

<div id="filter-wrapper"></div>

<section id="authorities-list" class="entity-type">
  <header>
    <h2>National and local authorities</h2>
    <p class="count"><%= @authorities.length %></p>
  </header>

  <ul>
    <% @authorities.each do |authority| %>
        <li><%= link_to authority.name, authority_path(authority.slug) %></li>
    <% end %>
  </ul>
</section>
