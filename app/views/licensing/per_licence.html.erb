<% content_for :title do %><%= @licence.name %> - Performance Platform - GOV.UK<% end %>
<% content_for :js_config do %>
    data-controller="licensing/controllers/per_licence" data-licence-url-slug="<%= @licence.slug %>"
<% end %>

<header>
  <p class="category-title">Licences</p>
  <h1><%= @licence.name %> <span class="tagline">(GOV.UK applications)</span></h1>
</header>

<section class="graph">
  <h2>Weekly licence applications</h2>
  <h3>Total licence applications over the last 12 weeks and top 5 authorities by licence application volume in this time</h3>
  
  <figure class="applications-graph" id="applications-by-authority"></figure>
</section>

<section>
  <h2>Licence applications by authority</h2>
  <h3>Authorities offering <%= @licence.name %> on GOV.UK</h3>
  
  <article class="table-wrapper" id="applications-table"></article>
</section>

