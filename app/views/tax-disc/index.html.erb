<%
  transaction_title = 'Tax disc'
  explanatory_copy = 'Service to license motor vehicles that are kept on public roads.'
  transaction_shortname = 'Tax disc'
  @js_config = {
    "controller" => "vehicle-licensing/controllers/vehicle-licensing-service",
    "service-name" => service_name
  }
%>

<% content_for :title do %><%= transaction_title %> - Vehicle licensing - Service performance - GOV.UK<% end %>

<%= render :partial => "vehicle-licensing/vehicle_licensing_navigation" %>

<%= render(partial: "common/copy/dashboard_header", locals: {title: transaction_title, copy: explanatory_copy}) %>

<%= render(partial: "vehicle-licensing/active-users", locals: {
  title: "Users on start page",   
  data_source: "Google Analytics",
  description: "Shows the estimated number of users currently accessing the GOV.UK start page for the #{transaction_shortname} transaction.",
  id: "#{params[:slug]}-volumes", 
  transaction_shortname:transaction_shortname,
  transaction_title: transaction_title
}) %>

<section id="customer-satisfaction" class="half-width">
  <h1>Customer satisfaction (web)</h1>
  <ul class="module-actions">
    <li class="info">
      <div>
        <p>Data source: <abbr title="Driver and Vehicle Licensing Agency">DVLA</abbr> database</p>
        <p>Customer satisfaction is measured using a survey on a sample of users at the point of transaction completion. It is measured on a scale 5 point scale from most satisfied to least satisfied. The mean of these responses is converted to a percentagefor display purposes.</p>
        <p>Responses relate to the month the tax disc starts. In most cases the user would have completed the transaction before this date.</p>
      </div>
    </li>
  </ul>
  <h2>Average satisfaction score last month</h2>
  <p class="impact-number current-value"></p>
  <p class="stat-description current-date"></p>
  <div class="previous-month">
    <p class="impact-number change"></p>
    <p class="stat-description previous-date"></p>
  </div>
</section>

<%= render(partial: "vehicle-licensing/volumetrics", locals: {
  title: "Applications", 
  description: "", 
  id: "#{params[:slug]}-volumes", 
  info_text: "Shows the number of successful applications to buy or renew a tax disc received by the DVLA.",
  transaction_title:transaction_title,
  transaction_shortname:transaction_shortname
}) %>

<%= render(partial: "vehicle-licensing/failures", locals: {
  title: "Application failures (web)", 
  id: "#{params[:slug]}-failures",  
  transaction_title:transaction_title,
  transaction_shortname:transaction_shortname
}) %>

<% if Rails.application.config.feature_toggles[:evl_availability_modules] %>
    <%= render(partial: "common/modules/availability", locals: {title: "Service availability", id: "#{params[:slug]}-availability"}) %>
<% end %>
