<% content_for :title do %><%= transaction_title %> - Vehicle licensing - Service performance - GOV.UK<% end %>

<% @js_config = {
    "controller" => "vehicle-licensing/controllers/vehicle-licensing-service",
    "service-name" => params[:slug],
} %>
<%= render(partial: "common/copy/dashboard_header", locals: {title: transaction_title, copy: explanatory_copy}) %>

<section>
  <h1>Live service usage</h1>
  <ul class="module-actions">
    <li class="info">
      <div>
        <p>Data source: Google Analytics</p>
        <p>Shows the estimated number of users on the GOV.UK launch page for <%=transaction_title%>. Users on this page have not started the transaction at this point.
</p>
      </div>
    </li>
  </ul>
  <h2>Users on the GOV.UK launch page for <%=transaction_title%> now</h2>
  <div id="<%= "#{params[:slug]}-realtime" %>"></div>
</section>


<%= render(partial: "common/modules/volumetrics", locals: {title: "Applications", description: "", id: "#{params[:slug]}-volumes", transaction_title:transaction_title}) %>

<%= render(partial: "vehicle-licensing/failures", locals: {title: "Application failures", id: "#{params[:slug]}-failures",  transaction_title:transaction_title}) %>

<% if Rails.application.config.feature_toggles[:evl_availability_modules] %>
    <%= render(partial: "common/modules/availability", locals: {title: "Service availability", id: "#{params[:slug]}-availability"}) %>
<% end %>
