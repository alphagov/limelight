<% content_for :title do %><%= transaction_title %> - Vehicle licensing - Service performance - GOV.UK<% end %>

<% @js_config = {
    "controller" => "vehicle-excise-duty/controllers/vehicle-licensing-service",
    "service-name" => params[:slug],
} %>

<header>
  <h1>
    <span class="strapline">Service Performance</span>
    <%= transaction_title %>
  </h1>
  <% if explanatory_copy %>
    <p class="explanatory"><%= explanatory_copy %></p>
  <% end %>
</header>

<%= render(partial: "vehicle-excise-duty/failures", locals: {title: "#{transaction_title} application failures", id: "failures"}) %>

<% if Rails.application.config.feature_toggles[:evl_availability_modules] %>
    <%= render(partial: "common/modules/availability", locals: {title: "#{transaction_title} service availability", id: "availability_module"}) %>
<% end %>
