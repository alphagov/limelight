<% content_for :title do %><%= transaction_title %> - Vehicle licensing - Service performance - GOV.UK<% end %>

<% @js_config = {
    "controller" => "vehicle-licensing/controllers/vehicle-licensing-service",
    "service-name" => params[:slug],
} %>
<%= render(partial: "common/copy/dashboard_header", locals: {title: transaction_title, copy: explanatory_copy}) %>

<section>
  <h1>Live service usage</h1>
  <ul class="module-actions">
    <li class="info">
      <div>
        <p>Data source: Google Analytics</p>
        <p>Shows estimated number of users currently accessing licensing pages.</p>
      </div>
    </li>
  </ul>
  <h2>Users actively browsing licensing pages now</h2>
  <div id="sorn-realtime"></div>
</section>

<%= render(partial: "common/modules/volumetrics", locals: {title: "#{transaction_title} applications",
                                                           description: "#{transaction_title} applications per week broken down by service over the last 9 weeks",
                                                           id: "#{params[:slug]}-volumes"}) %>

<%= render(partial: "vehicle-licensing/failures", locals: {title: "#{transaction_title} application failures", id: "#{params[:slug]}-failures"}) %>

<% if Rails.application.config.feature_toggles[:evl_availability_modules] %>
    <%= render(partial: "common/modules/availability", locals: {title: "#{transaction_title} service availability", id: "#{params[:slug]}-availability"}) %>
<% end %>
